#!/usr/bin/env perl

use strict;
use warnings;

sub random_point {

	my $xmin = -10000;
	my $xmax =  30000;
	my $ymin =  0;
	my $ymax =  26000;

	#print "$xmin $xmax $ymin $ymax\n";

	my $x = int(rand($xmax - $xmin)) + $xmin;
	my $y = int(rand($ymax - $ymin)) + $ymin;

	return ($x, $y);
}

for (0..0) {
	my ($x, $y) = random_point();
	print "$x $y\n";
}

